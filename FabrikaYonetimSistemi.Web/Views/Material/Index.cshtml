@model IEnumerable<FabrikaYonetimSistemi.Web.Models.MaterialViewModel>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">Malzeme Listesi</h1>

        <a href="/Material/Add" class="btn btn-success">
            <i class="bi bi-plus-circle">Malzeme Ekle</i>
        </a>
    </div>

    <table class="table table-striped table-hover table-responsive-md">
        <thead class="table-success">
            <tr>
                <th>Id</th>
                <th>Adı</th>
                <th class="text-center">İşlemler</th>
            </tr>
        </thead>

        <tbody>
            @if(!Model.Any()){
                <tr>
                    <td colspan="4" class="text-center text-muted">Henüz herhangi bir malzeme bulunmamaktadır.</td>
                </tr>
            }

            else{
                @foreach(var material in Model){
                    <tr>
                        <td>@material.Id</td>
                        <td>@material.Name</td>
                        <td class="text-center">
                            <a href="/Material/Update/@material.Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Güncelle
                            </a>

                            <a href="/StorageMaterial/AddMaterial/@material.Id" class="btn btn-success">
                                <i class="bi bi-plus"></i> Depoya Ekle
                            </a>

                            <a href="/Material/Delete/@material.Id" class="btn btn-danger">
                                <i></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

