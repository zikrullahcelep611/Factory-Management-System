@model Factory

@{
    ViewData["Title"] = "Add New Factory";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Yeni Fabrika Ekle</h2>
    <form asp-action="Add" asp-controller="Factory" method="post" class="needs-validation" novalidate>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="Name" class="form-label">Fabrika Adı</label>
                <input asp-for="Name" class="form-control" id="Name" placeholder="Enter factory name" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="Location" class="form-label">Adres</label>
                <input asp-for="Location" class="form-control" id="Location" placeholder="Enter factory location" required />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-end gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Kaydet
            </button>
            <button type="button" class="btn btn-secondary" onclick="window.location.href='/Factory/Index';">
                <i class="bi bi-x-circle"></i> İptal
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

