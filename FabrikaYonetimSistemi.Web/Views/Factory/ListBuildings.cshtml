@model IEnumerable<Building>

<h2>Fabrika @ViewBag.FactoryId İçin Binalar</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (Model == null || !Model.Any())
{
    <p class="text-center text-muted">Henüz bina eklenmemiş.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var building in Model)
            {
                <tr>
                    <td>@building.Id</td>
                    <td>@building.Name</td>
                    <td>
                        <a href="/Building/Update/@building.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Güncelle
                        </a>
                        <a href="/Building/Delete/@building.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bu binayı silmek istediğinizden emin misiniz?');">
                            <i class="bi bi-trash"></i> Sil
                        </a>
                        <a href="/Building/Storages/@building.Id" class="btn btn-info btn-sm">
                            <i class="bi bi-trash"></i> Depoları Göster
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a href="/Factory" class="btn btn-secondary">Fabrikalara Geri Dön</a>
