@model IEnumerable<FabrikaYonetimSistemi.Web.Models.BuildingViewModel>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">Bina Listesi</h1>
        <a href="/Building/Add" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Yeni Bina Ekle
        </a>
    </div>

    <table class="table table-striped table-hover table-responsive-md">
        <thead class="table-success">
            <tr>
                <th>Id</th>
                <th>Adı</th>
                <th>Fabrika</th>
                <th class="text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">Henüz herhangi bir bina bulunmamaktadır</td>
                </tr>
            }
            else
            {
                @foreach (var building in Model)
                {
                    <tr>
                        <td>@building.Id</td>
                        <td>@building.Name</td>
                        <td>@building.Factory.Name</td>
                        <td class="text-center">
                            <a href="/building/Update/@building.Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Güncelle
                            </a>
                            <button class="btn btn-danger btn-sm" onclick="deleteBuilding(@building.Id)">
                                <i class="bi bi-trash"></i> Sil
                            </button>
                            <a href="/Building/Storages/@building.Id" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Depoları Listele
                            </a>
                            <a href="/Storage/AddStorageToBuilding/@building.Id" class="btn btn-success btn-sm">
                                <i class="bi bi-eye"></i> Depo Ekle
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!-- Bootstrap ve Icons CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

@section Scripts {
    <script src="/js/deleteBuilding.js"></script>
}
