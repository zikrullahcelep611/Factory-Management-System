@model IEnumerable<Storage>

<h2>Bina @ViewBag.BuildingId İçin Binalar</h2>

@if(TempData["ErrorMessage"] != null){
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var storage in Model){
            <tr>
                <td>@storage.Id</td>
                <td>@storage.Name</td>
                <td>
                    <a href="/Building/Update/@storage.Id" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square"></i> Güncelle
                    </a>
                    <a href="/Building/Delete/@storage.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bu depoyu silmek istediğinizden emin misiniz?');">
                        <i class="bi bi-trash"></i> Sil
                    </a>
                    <a href="/StorageMaterial/MaterialList/@storage.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-trash"></i> Malzemeleri Göster
                    </a>
                    <a href="/StorageMaterial/MaterialList/@storage.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-trash"></i> Malzemeleri Ekle
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Building" class="btn btn-secondary">Binalara Geri Dön</a>
